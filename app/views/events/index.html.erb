<h2>Concert Listings in <%= @city %></h2>
<% @events.each do |event| %>
	<body class="event">
	<div>
		<div>
		<img class="event" src="<%= event["image"][3]["content"] %>" />
	</div>
	<p>
		<%= link_to event["artists"]["headliner"], artist_path(event["artists"]["headliner"]) %> </br>
		<%= event["venue"]["location"]["street"] %></br>
		<%= event["startDate"] %>	<br>
		<% if event["website"] == {} %>
			Sorry Tickets Are Unavailable<br>
		<% else %>
			<%= link_to "Get Tickets!", event["website"] %>	<br>
		<% end %>
	<%# info = @lastfm.event.get_info([event["id"]]) %>

	<div class="clearfix"><br>
	</body>
<% end %>


